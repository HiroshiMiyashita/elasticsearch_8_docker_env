{
  "index_patterns": ["resource_*"],
  "priority": 10,
  "template": {
    "settings": {
      "analysis": {
        "char_filter": {
          "normalize": {
            "type": "icu_normalizer",
            "name": "nfkc_cf",
            "mode": "compose"
          }
        },
        "normalizer": {
          "keyword_normalizer": {
            "char_filter": [
              "normalize"
            ],
            "filter":[
                "lowercase",
                "icu_folding"
            ]
          }
        },
        "tokenizer": {
          "ja_tokenizer": {
            "mode": "search",
            "type": "kuromoji_tokenizer",
            "discard_compound_token": true
          },
          "bi_gram_tokenizer": {
            "type": "ngram",
            "min_gram": 2,
            "max_gram": 2
          },
          "tri_gram_tokenizer": {
            "type": "ngram",
            "min_gram": 3,
            "max_gram": 3
          }
        },
        "filter": {
          "shingle": {
            "type": "shingle",
            "min_shingle_size": 2,
            "max_shingle_size": 3
          },
          "synonym": {
            "type": "synonym",
            "lenient": true,
            "synonyms_path": "analysis/synonym.txt"
          }
        },
        "analyzer": {
          "japanese_analyzer": {
            "type": "custom",
            "char_filter": [
              "normalize"
            ],
            "tokenizer": "ja_tokenizer",
            "filter": [
              "kuromoji_baseform",
              "kuromoji_part_of_speech",
              "cjk_width",
              "ja_stop",
	      "synonym",
	      "kuromoji_number",
              "kuromoji_stemmer",
	      "kuromoji_iteration_mark",
              "lowercase",
              "icu_folding"
            ]
          },
          "japanese_shingle_analyzer": {
            "type": "custom",
            "char_filter": [
              "normalize"
            ],
            "tokenizer": "ja_tokenizer",
            "filter": [
              "kuromoji_baseform",
              "kuromoji_part_of_speech",
              "cjk_width",
              "ja_stop",
              "kuromoji_stemmer",
              "lowercase",
              "icu_folding",
              "shingle"
            ]
          },
          "japanese_reverse_analyzer": {
            "type": "custom",
            "char_filter": [
              "normalize"
            ],
            "tokenizer": "ja_tokenizer",
            "filter": [
              "kuromoji_baseform",
              "kuromoji_part_of_speech",
              "cjk_width",
              "ja_stop",
              "kuromoji_stemmer",
              "lowercase",
              "icu_folding",
              "reverse"
            ]
          },
          "bi_gram_analyzer": {
            "type": "custom",
            "tokenizer": "bi_gram_tokenizer",
            "filter": [
              "lowercase",
              "icu_folding"
            ]
          },
          "tri_gram_analyzer": {
            "type": "custom",
            "tokenizer": "tri_gram_tokenizer",
            "filter": [
              "lowercase",
              "icu_folding"
            ]
          }
        }
      }
    }
  }
}
